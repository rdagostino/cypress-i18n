{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "brace-style": 0,
    "camelcase": 0, // SF fields are not coming back in camel case.
    "consistent-return": 0,
    "function-paren-newline": 0,
    "linebreak-style": 0,
    "implicit-arrow-linebreak": 0,
    "import/order": 0,
    "import/no-extraneous-dependencies": 0,
    "indent": 0,
    "max-len": [
      "error",
      {
        "code": 125,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreTemplateLiterals": true,
        "ignoreStrings": true
      }
    ],
    "no-await-in-loop": 0,
    "no-confusing-arrow": 0,
    "no-lonely-if": 0,
    "no-shadow": 0,
    "no-useless-constructor": 0, // Remove this once airbnb-typescript/base is installed
    "no-empty-function": 0, // Remove this once airbnb-typescript/base is installed
    "operator-linebreak": 0,
    "comma-dangle": 0,
    "func-names": 0,
    "object-curly-newline": 0,
    "no-nested-ternary": 0,
    "@next/next/no-server-import-in-page": 0,
    "react/jsx-boolean-value": 0,
    "react/jsx-curly-newline": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-wrap-multilines": 0,
    "react/jsx-props-no-spreading": 0,
    "react/no-array-index-key": 0,
    "react/no-danger": 0,
    "@typescript-eslint/explicit-function-return-type": 2,
    "@typescript-eslint/no-empty-interface": 0,
    "@typescript-eslint/no-explicit-any": 2,
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-unused-vars": [2, { "args": "none" }],
    "@typescript-eslint/no-namespace": 0,
    "react/no-unstable-nested-components": 0,
    "react/require-default-props": 0,
    "react-hooks/exhaustive-deps": 0,
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function"
      }
    ],
    "no-undef": "off",
    "import/prefer-default-export": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/interactive-supports-focus": 0,
    "jsx-quotes": 0,
    "react/jsx-filename-extension": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-console": 2,
    "spaced-comment": [
      "error",
      "always",
      {
        "line": {
          "markers": ["/"],
          "exceptions": ["-", "+"]
        },
        "block": {
          "markers": ["!"],
          "exceptions": ["*"],
          "balanced": true
        }
      }
    ]
  }
}
